# roles/blackbox_exporter/templates/blackbox_exporter.service.j2
[Unit]
Description=Blackbox Exporter
Documentation=https://github.com/prometheus/blackbox_exporter
Wants=network-online.target
After=network-online.target

[Service]
User={{ blackbox_exporter_service_user }}
Group={{ blackbox_exporter_service_group }}
Type=simple
ExecStart={{ blackbox_exporter_install_dir }}/blackbox_exporter --config.file="{{ blackbox_exporter_config_file }}" --web.listen-address="{{ blackbox_exporter_web_listen_address }}"

[Install]
WantedBy=multi-user.target

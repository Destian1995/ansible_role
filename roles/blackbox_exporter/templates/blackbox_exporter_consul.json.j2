{
  "service": {
    "name": "blackbox_exporter",
    "tags": [
      "metrics",
      "exporter",
      "name_system:{{ hostvars[inventory_hostname]['name_system'] | default('unknown') }}"
    ],
    "port": {{ blackbox_exporter_port }},
    "address": "{{ ansible_host }}",
    "checks": [
      {
        "http": "http://localhost:{{ blackbox_exporter_port }}/metrics",
        "interval": "10s"
      }
    ]
  }
}
